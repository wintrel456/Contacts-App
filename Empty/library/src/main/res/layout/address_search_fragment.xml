<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adressSearchContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SearchView
        android:id="@+id/addressSearchView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:queryBackground="@color/back_white"
        android:searchIcon="@drawable/ic_search"
        app:layout_constraintEnd_toEndOf="@+id/addressList"
        app:layout_constraintStart_toStartOf="@+id/addressList"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/addressList"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addressSearchView" />
</androidx.constraintlayout.widget.ConstraintLayout>